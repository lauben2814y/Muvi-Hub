<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/moviesToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="0dp"
            app:title="Movies">

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainSlider">

            <RelativeLayout
                android:id="@+id/carouselContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp">

                <com.jackandphantom.carouselrecyclerview.CarouselRecyclerview
                    android:id="@+id/moviesCarouselDummy"
                    android:layout_width="match_parent"
                    android:layout_height="220dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/moviesCarouselDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/carouselContainer">

                <TextView
                    android:id="@+id/dummy_carousel_poster_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="4dp"
                    android:text="Title"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dummy_carousel_poster_title"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/movieCarouselPostertype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/bullet"
                        android:drawablePadding="4dp"
                        android:paddingHorizontal="12dp"
                        android:text="Movie" />

                    <TextView
                        android:id="@+id/dummy_carousel_poster_genres"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/bullet"
                        android:drawablePadding="4dp"
                        android:paddingHorizontal="12dp"
                        android:text="Genres" />

                </LinearLayout>

            </RelativeLayout>

            <GridLayout
                android:id="@+id/movieCarouselActions"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/moviesCarouselDetails"
                android:layout_marginTop="8dp"
                android:columnCount="3"
                android:orientation="horizontal"
                android:paddingHorizontal="18dp">

                <Button
                    android:layout_width="0dp"
                    android:id="@+id/dummyBtn"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="6"
                    android:text="@string/preview" />

            </GridLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dummyRecycler"
                android:layout_below="@id/movieCarouselActions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>