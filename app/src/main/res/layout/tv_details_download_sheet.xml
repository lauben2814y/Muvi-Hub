<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:id="@+id/episodeDownloadSheet"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose download option"
        android:id="@+id/title"
        android:textSize="14sp"
        android:layout_marginVertical="12dp" />

    <Button
        android:id="@+id/btn_download_translated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Download Translated"
        style="@style/CustomButtonStyle"
        android:layout_marginBottom="6dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_download_non_translated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Download Non Translated"
        style="@style/CustomButtonStyle"
        android:layout_marginBottom="6dp"
        android:visibility="gone" />

</LinearLayout>