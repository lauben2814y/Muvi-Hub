<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/dummy_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".pages.MovieDetails">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/movieDetailsAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/movieDetailsCollapseAppBar"
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:titleEnabled="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true">

                    <ImageView
                        android:id="@+id/dummy_backdrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        android:scaleType="centerCrop"
                        app:layout_collapseMode="parallax" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@id/dummy_backdrop"
                        android:background="@drawable/gradient_fade"
                        android:fitsSystemWindows="true" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="0dp"
                        android:paddingHorizontal="12dp">

                        <RelativeLayout
                            android:id="@+id/movieDetailsDescription"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_above="@+id/watchBtnsContainer"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="8dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/movieDetailsPagePoster"
                                android:layout_width="110dp"
                                android:layout_height="170dp"
                                android:layout_centerVertical="true"
                                app:cardCornerRadius="6dp">

                                <ImageView
                                    android:id="@+id/dummy_poster"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop" />

                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toEndOf="@id/movieDetailsPagePoster"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:paddingLeft="18dp">

                                <TextView
                                    android:id="@+id/dummy_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bad"
                                    android:textSize="22sp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="12dp"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/star_half_24px"
                                            app:tint="@color/gold" />

                                        <TextView
                                            android:id="@+id/movieDetailsVote"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:drawablePadding="4dp"
                                            android:text="7.2" />

                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/movieDetailsDate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="12dp"
                                        android:text="2019" />

                                    <TextView
                                        android:id="@+id/movieDetailsRuntime"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="1hr 56min" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/movieDetailsGenres"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Romance, Action, Adventure" />

                            </LinearLayout>

                        </RelativeLayout>

                        <GridLayout
                            android:id="@+id/watchBtnsContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/moviePageDetailsActionsContainer"
                            android:columnCount="2"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/dummy_book_btn"
                                style="@style/CustomButtonStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="4"
                                android:layout_marginEnd="3dp"
                                android:text="Book" />

                            <Button
                                android:id="@+id/dummy_more_btn"
                                style="@style/CustomButtonStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="4"
                                android:layout_marginStart="3dp"
                                android:text="Learn more" />

                        </GridLayout>

                        <RelativeLayout
                            android:id="@+id/moviePageDetailsActionsContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/like_dummy_btn"
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:layout_marginEnd="22dp"
                                    android:background="?attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/likeBtnImg"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="?attr/selectableItemBackgroundBorderless"
                                        android:src="@drawable/thumb_up_24px"
                                        android:contentDescription="@string/details_action_btn" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Like"
                                        android:textSize="11sp" />

                                </LinearLayout>


                                <LinearLayout
                                    android:id="@+id/share_dummy_btn"
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:layout_marginEnd="22dp"
                                    android:background="?attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/shareBtnImg"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="?attr/selectableItemBackgroundBorderless"
                                        android:src="@drawable/share_24px"
                                        android:contentDescription="@string/details_action_btn" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Share"
                                        android:textSize="11sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/reportBtn"
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:layout_marginEnd="22dp"
                                    android:background="?attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/report_dummy_btn"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="?attr/selectableItemBackgroundBorderless"
                                        android:src="@drawable/flag_24px"
                                        android:contentDescription="@string/details_action_btn" />

                                    <TextView
                                        android:id="@+id/reportTxt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/report"
                                        android:textSize="11sp" />

                                </LinearLayout>

                            </LinearLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:id="@+id/details_txt_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:padding="22dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/details_watch_on_txt"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="This is a dummy overview text"
                android:layout_marginBottom="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/details_overview_txt"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="This is a dummy overview text" />

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</FrameLayout>