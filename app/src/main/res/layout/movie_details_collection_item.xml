<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:paddingVertical="8dp">

    <ImageView
        android:id="@+id/moreBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/chevron_right_24px"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="2dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp"
        android:layout_centerVertical="true"
        android:id="@+id/collectionPosterContainer" >

        <RelativeLayout
            android:layout_width="85dp"
            android:layout_height="110dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/movieCollectionPoster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/placeholder"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/movieCollectionVj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/md_theme_primary"
                android:text="Vj Junior"
                android:textColor="@color/md_theme_onPrimary"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignTop="@id/movieCollectionPoster"
                android:textSize="10sp"
                android:padding="4dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_toRightOf="@id/collectionPosterContainer"
        android:layout_centerVertical="true"
        android:paddingLeft="12dp"
        android:paddingTop="2dp">

        <TextView
            android:id="@+id/movieCollectionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="After"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie"
            android:textSize="12sp"
            android:id="@+id/movieCollectionType"
            android:layout_below="@id/movieCollectionTitle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/movieCollectionType"
            android:textSize="12sp"
            android:ellipsize="end"
            android:maxLines="3"
            android:id="@+id/movieCollectionOverview" />

    </RelativeLayout>

</RelativeLayout>