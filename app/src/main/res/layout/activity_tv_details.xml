<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".pages.TvDetails"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/tvDetailsAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/tvDetailsCollapseAppBar"
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:titleEnabled="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true">

                    <ImageView
                        android:id="@+id/tvDetailsHeaderImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        android:scaleType="centerCrop"

                        app:layout_collapseMode="parallax" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@id/tvDetailsHeaderImg"
                        android:background="@drawable/gradient_fade"
                        android:fitsSystemWindows="true" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:paddingHorizontal="12dp">

                        <RelativeLayout
                            android:id="@+id/tvDetailsDescription"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_above="@+id/watchBtnsContainer"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="8dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/tvDetailsPagePoster"
                                android:layout_width="110dp"
                                android:layout_height="170dp"
                                android:layout_centerVertical="true"
                                app:cardCornerRadius="6dp">

                                <ImageView
                                    android:id="@+id/tvDetailsPoster"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop" />

                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toEndOf="@id/tvDetailsPagePoster"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:paddingLeft="18dp">

                                <ImageView
                                    android:id="@+id/tvDetailsLogo"
                                    android:layout_width="110dp"
                                    android:layout_height="60dp" />

                                <TextView
                                    android:id="@+id/tvDetailsName"
                                    android:layout_width="match_parent"
                                    android:text="Pirates of the Carribean"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textSize="24sp"
                                    android:visibility="gone" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="12dp"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/star_half_24px"
                                            app:tint="@color/gold" />

                                        <TextView
                                            android:id="@+id/tvDetailsVote"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:drawablePadding="4dp"
                                            android:text="7.2" />

                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/tvDetailsDate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="12dp"
                                        android:text="2019" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvDetailsGenres"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Romance, Action, Adventure" />

                            </LinearLayout>

                        </RelativeLayout>

                        <GridLayout
                            android:id="@+id/watchBtnsContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/tvPageDetailsActionsContainer"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/seasonBtn"
                                style="@style/CustomButtonStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="4"
                                android:layout_marginEnd="3dp"
                                android:text="Season 1" />


                        </GridLayout>

                        <RelativeLayout
                            android:id="@+id/tvPageDetailsActionsContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/tvDetailsPageWishListBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="22dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageButton
                                        android:id="@+id/tv_wishlist_img"
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="8dp"
                                        android:background="@drawable/ripple_circular"
                                        android:contentDescription="@string/details_action_btn"
                                        android:src="@drawable/bookmark_add_24px" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/wishlist"
                                        android:id="@+id/tv_wishlist_txt"
                                        android:textSize="11sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/tvDetailsPageShareBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="22dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageButton
                                        android:id="@+id/tv_share_img"
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:background="@drawable/ripple_circular"
                                        android:layout_margin="8dp"
                                        android:contentDescription="@string/details_action_btn"
                                        android:src="@drawable/share_24px"
                                        android:layout_gravity="center" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Share"
                                        android:textSize="11sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/tvDetailsPageReportBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="22dp"
                                    android:background="?attr/selectableItemBackground"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageButton
                                        android:id="@+id/tv_report_img"
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:background="@drawable/ripple_circular"
                                        android:layout_margin="8dp"
                                        android:contentDescription="@string/details_action_btn"
                                        android:src="@drawable/flag_24px"
                                        android:layout_gravity="center" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Report"
                                        android:textSize="11sp" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/tvDetailsPageTrailerBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageButton
                                    android:id="@+id/tvTrailerBtnImg"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:background="@drawable/ripple_circular"
                                    android:layout_margin="8dp"
                                    android:contentDescription="@string/details_action_btn"
                                    android:src="@drawable/play_arrow_small"
                                    android:layout_gravity="center" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Trailer"
                                    android:textSize="11sp" />

                            </LinearLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tvDetailsTabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@android:color/transparent"
                app:tabGravity="fill"
                app:tabIndicator="@drawable/tab_indicator"
                app:tabIndicatorFullWidth="true">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seasons" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overview" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cast" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Related" />

            </com.google.android.material.tabs.TabLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/tvDetailsPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>