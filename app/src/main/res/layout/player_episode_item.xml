<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"
        android:layout_centerVertical="true"
        android:id="@+id/episodePosterContainer" >

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/episodePoster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/poster"
                android:scaleType="centerCrop" />

            <ImageButton
                android:id="@+id/playEpisode"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Platy episode"
                android:src="@drawable/play_circle_24px"
                android:layout_centerInParent="true"
                app:tint="@color/md_theme_primary" />

            <TextView
                android:id="@+id/episodeNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@color/md_theme_primary"
                android:padding="2dp"
                android:text="Episode 1"
                android:textColor="@color/md_theme_onPrimary"
                android:textSize="11sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>