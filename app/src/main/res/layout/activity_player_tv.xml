<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/playerTv">
    <RelativeLayout
        android:id="@+id/player_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:clipToPadding="false"
        android:fitsSystemWindows="false">

        <androidx.media3.ui.PlayerView
            android:id="@+id/player_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            app:use_controller="false"
            app:resize_mode="fit"
            android:keepScreenOn="true" />

        <!-- Buffering indicator -->
        <FrameLayout
            android:id="@+id/buffering_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/buffering_spinner"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:indeterminateTint="@android:color/white"
                    android:indeterminateTintMode="src_atop" />

                <TextView
                    android:id="@+id/buffering_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Loading..."
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </FrameLayout>

        <!-- Custom controls overlay -->
        <RelativeLayout
            android:id="@+id/controlsParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- player header -->
            <LinearLayout
                android:id="@+id/playerHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="#80000000"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/close_player_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Close and quit player"
                    android:padding="12dp"
                    android:src="@drawable/arrow_back_24px" />

                <TextView
                    android:id="@+id/video_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Game of thrones S01E01"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

            </LinearLayout>
            <!-- episodes recycler -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/episodesRecyclerContainer"
                android:layout_above="@+id/custom_controls"
                android:padding="12dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/playerEpisodesRecycler" />

            </RelativeLayout>
            <!-- bottom controls -->
            <RelativeLayout
                android:id="@+id/custom_controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:padding="16dp">
                <!-- Progress bar -->
                <SeekBar
                    android:id="@+id/seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" />

                <!-- Time indicators and controls -->
                <RelativeLayout
                    android:id="@+id/controlsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/seek_bar"
                    android:orientation="horizontal">

                    <!-- left controls -->
                    <RelativeLayout
                        android:id="@+id/leftControls"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/position_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            />


                    </RelativeLayout>

                    <!-- center controls -->
                    <LinearLayout
                        android:id="@+id/centerControls"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <ImageButton
                            android:id="@+id/rewind_button"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_toLeftOf="@id/play_pause_button"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Toggle play and pause"
                            android:src="@drawable/replay_10_24px" />

                        <ImageButton
                            android:id="@+id/prevBtn"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_toEndOf="@id/play_pause_button"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Toggle play and pause"
                            android:src="@drawable/skip_previous_24px"
                            android:layout_marginStart="24dp" />

                        <ImageButton
                            android:id="@+id/play_pause_button"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Toggle play and pause"
                            android:src="@drawable/pause_24px" />

                        <ImageButton
                            android:id="@+id/nextBtn"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_toEndOf="@id/play_pause_button"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Toggle play and pause"
                            android:src="@drawable/skip_next_24px"
                            android:layout_marginEnd="24dp"/>

                        <ImageButton
                            android:id="@+id/forward_button"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_toEndOf="@id/play_pause_button"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Toggle play and pause"
                            android:src="@drawable/forward_10_24px" />

                    </LinearLayout>

                    <!-- right controls -->
                    <RelativeLayout
                        android:id="@+id/rightControls"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/duration_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="00:00" />

                        <ImageButton
                            android:id="@+id/fullscreen_button"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/duration_text"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/toggle_full_screen"
                            android:src="@drawable/fullscreen_24px" />

                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>