<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:paddingVertical="8dp">

    <ImageButton
        android:id="@+id/downloadEpisodeBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Toggle play and pause"
        android:src="@drawable/download_24px"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:tint="@color/md_theme_primary" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"
        android:layout_centerVertical="true"
        android:id="@+id/episodePosterContainer" >

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/episodePoster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/poster"
                android:scaleType="centerCrop" />

            <ImageButton
                android:id="@+id/playEpisodeBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Platy episode"
                android:src="@drawable/play_circle_24px"
                android:layout_centerInParent="true"
                app:tint="@color/md_theme_primary" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_toRightOf="@id/episodePosterContainer"
        android:layout_centerVertical="true"
        android:paddingLeft="12dp"
        android:paddingTop="2dp">

        <TextView
            android:id="@+id/episodeNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Episode 3"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Founding"
            android:textSize="12sp"
            android:id="@+id/episodeName"
            android:layout_below="@id/episodeNo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/episodeName"
            android:textSize="12sp"
            android:ellipsize="end"
            android:maxLines="3"
            android:id="@+id/episodeOverview" />

    </RelativeLayout>

</RelativeLayout>